{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["deno.window"],
        "strict": true
    },
    "tasks": {
        "start": "deno run -c tsconfig.json  --allow-all --watch server.ts"
    },
    "lint": {
        "files": {
            "include": [],
            "exclude": []
        },
        "rules": {
            "tags": ["recommended"],
            "include": [],
            "exclude": ["no-explicit-any","no-var"]
        }
    },
    "fmt": {
        "files": {
            "include": [],
            "exclude": []
        },
        "options": {
            "useTabs": true,
            "lineWidth": 80,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}
